@using GestaoDeEquipamentos.Dominio.ModuloFabricante
@model List<Fabricante>

<html>
<head>
    @* Bootstrap *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <title>Visualização de Fabricantes | Gestão de Equipamentos</title>
</head>
<body data-bs-theme="dark">
    @* Barra de Navegação Navbar *@
    <nav class="navbar bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">Gestão de Equipamentos</a>
            <ul class="navbar-nav flex-row ms-auto">
                <li class="nav-item me-2">
                    <a class="btn btn-outline-primary" href="/Fabricante">Fabricantes</a>
                </li>
                <li class="nav-item me-2">
                    <a class="btn btn-outline-primary" href="/Equipamento">Equipamentos</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-primary" href="/Chamado">Chamados</a>
                </li>
            </ul>
        </div>
    </nav>

    @* Cabeçalho *@
    <header class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Visualização de Fabricantes</h1>

            <a class="btn btn-primary" href="/Fabricante/Cadastrar">+ Novo Fabricante</a>
        </div>

        @* Conteúdo principal da página *@
        <div class="row g-3">
            @foreach (Fabricante f in Model)
            {
                <div class="col-3">
                    <div class="card h-100 bg-dark border-secondary">
                        <div class="card-body">
                            <h5 class="card-title">@f.Nome</h5>
                            <p class="card-text mb-1"><strong>Email:</strong> @f.Email</p>
                            <p class="card-text"><strong>Telefone:</strong> @f.Telefone</p>
                        </div>
                        <div class="card-footer text-end border-secondary">
                            <a class="btn btn-sm btn-warning me-1" href="/Fabricante/Editar/@f.Id">
                                <i class="bi bi-pencil-square "></i>
                                </a>
                            <a class="btn btn-sm btn-danger text-dark" href="/Fabricante/Excluir/@f.Id"
                               onclick="return confirm('Tem certeza que deseja excluir este fabricante?')">
                               <i class="bi bi-trash3"></i>
                           </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </header>

</body>
</html>
