<html>
<head>
    @* Bootstrap *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <title>Cadastro de Fabricantes | Gestão de Equipamentos</title>
</head>
<body data-bs-theme="dark">
    @* Barra de Navegação Navbar *@
    <nav class="navbar bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">Gestão de Equipamentos</a>
            <ul class="navbar-nav flex-row ms-auto">
                <li class="nav-item me-2">
                    <a class="btn btn-primary" href="/Fabricante">Fabricantes</a>
                </li>
                <li class="nav-item me-2">
                    <a class="btn btn-primary" href="/Equipamento">Equipamentos</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-primary" href="/Chamado">Chamados</a>
                </li>
            </ul>
        </div>
    </nav>

    @* Cabeçalho *@
    <header class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Cadastro de Fabricantes</h1>
        </div>
    </header>

    @* Conteúdo principal da página *@
    <main class="container my-4">
        <div class="row">
            <form class="col-6" action ="/Fabricante/Cadastrar" method="post">

                <div class="mb-3">
                    <label for="Nome" class="form-label">Nome:</label>
                    <input id="Nome" name="Nome" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="Email" class="form-label">E-mail:</label>
                    <input id="Email" name="Email" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="Telefone" class="form-label">Telefone:</label>
                    <input id="Telefone" name="Telefone" class="form-control" />
                </div>

                <div class="text-end">
                    <a href="/Fabricante" class="btn btn-outline-primary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>

            </form>
            
        </div>
    </main>
</body>
</html>

