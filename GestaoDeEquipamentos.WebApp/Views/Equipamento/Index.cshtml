@using GestaoDeEquipamentos.WebApp.Models
@{
    Layout = "_Layout";

    ViewData["Title"] = "Visualização de Equipamentos";
}



@model VisualizarEquipamentosViewModel

<div class="container">
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" href="/Equipamento/Cadastrar">+ Novo Equipamento</a>
    </div>
</div>


<div class="row g-3">

    @foreach (DetalhesEquipamentoViewModel e in Model.Registros)
    {
        <div class="col-3">

            <div class="card h-100 bg-dark border-secondary">
                <div class="card-body">
                    <h5 class="card-title">@e.Nome</h5>
                    <p class="card-text mb-1"><strong>Preço de Aquisição:</strong> @e.PrecoAquisicao.ToString("C2")</p>
                    <p class="card-text mb-1"><strong>Data Fabricação:</strong> @e.DataFabricacao.ToShortDateString()</p>
                    <p class="card-text"><strong>Fabricante:</strong> @e.NomeFabricante</p>
                </div>
                <div class="card-footer text-end border-secondary">
                    <a class="btn btn-sm btn-primary me-1" href="/Equipamento/Editar/@e.Id">
                        <i class="bi bi-pencil-square "></i>
                    </a>
                    <a class="btn btn-sm btn-danger" href="/Equipamento/Excluir/@e.Id">
                        <i class="bi bi-trash3"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
